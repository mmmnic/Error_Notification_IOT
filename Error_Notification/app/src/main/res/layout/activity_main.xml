<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ERROR NOTIFICATION"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server Address"
                    android:textColor="#39baa9"
                    android:textSize="15dp"
                    android:textStyle="bold"/>/>
                <EditText
                    android:id="@+id/inputAddress"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:hint="input Address"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:id="@+id/reset1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:text="Reset"
                    android:textColor="#c60d45"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Port"
                    android:textColor="#39baa9"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/inputPort"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:hint="input Port"
                    android:layout_marginLeft="80dp"/>
                <Button
                    android:id="@+id/reset2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:textColor="#c60d45"
                    android:text="Reset"/>
            </LinearLayout>

            <Button
                android:id="@+id/saveAndStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="#c60d45"
                android:text="Save And Start" />

            <TextView
                android:id="@+id/connection_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connection"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold|italic"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:orientation="vertical"
                android:textAlignment="center"
                android:alignmentMode="alignMargins"
                android:padding="5dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@drawable/machine_grey"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#39baa9"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Machine 1"/>

                    <ImageView
                        android:id="@+id/machine1_status"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/redbtn"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:padding="5dp"
                    android:background="@drawable/machine_grey"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#39baa9"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Machine 2"/>

                    <ImageView
                        android:id="@+id/machine2_status"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/redbtn"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/machine_grey"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#39baa9"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Machine 3"/>

                    <ImageView
                        android:id="@+id/machine3_status"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/redbtn"/>
                </LinearLayout>

            </GridLayout>
        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>